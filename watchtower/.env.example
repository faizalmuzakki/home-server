# Watchtower Configuration
# Copy to .env and configure

# Monitor only mode (recommended for home server)
# Set to false to enable auto-updates
WATCHTOWER_MONITOR_ONLY=true

# Notification URL (shoutrrr format)
# Examples:
#   Discord: discord://token@webhookid
#   Telegram: telegram://token@telegram?chats=chat-id
#   Email: smtp://user:password@host:port/?from=sender&to=recipient
#   Slack: slack://hook-url
#
# See: https://containrrr.dev/shoutrrr/services/overview/
WATCHTOWER_NOTIFICATION_URL=
